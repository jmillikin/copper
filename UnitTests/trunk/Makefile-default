CXX=g++
# For the default output handler
CXXFLAGS=-Wall -Wextra -g3 -O0
LFLAGS=

# For the QT 4 output handler
#CXXFLAGS=-Wall -Wextra -g3 -O0 `pkg-config --cflags QtGui_debug QtCore_debug`
#LFLAGS=`pkg-config --libs QtGui_debug QtCore_debug`
#QT_OBJECTS=build/qt4_output_handler.o build/qt4_output_handler.moc.o

# For the GTK+ output handler
#CXXFLAGS=-Wall -Wextra -g3 -O0 `pkg-config --cflags gtk+-2.0`
#LFLAGS=`pkg-config --libs gtk+-2.0 gthread-2.0`
#GTK_OBJECTS=build/gtk_output_handler.o

RM=rm -f

OBJECTS= \
  $(GTK_OBJECTS) \
  $(QT_OBJECTS) \
  build/assertion.o \
  build/default_output_handler.o \
  build/error_exception.o \
  build/exception_protector.o \
  build/failure_exception.o \
  build/fixture.o \
  build/main.o \
  build/output_handler.o \
  build/protector.o \
  build/self_tests.o \
  build/suite.o \
  build/test.o \
  build/unix_protector.o

all: builddir tests

build/assertion.o: assertion.cpp
	$(CXX) $(CXXFLAGS) -c $? -o $@

build/default_output_handler.o: output_handlers/default_output_handler.cpp
	$(CXX) $(CXXFLAGS) -c $? -o $@

build/error_exception.o: error_exception.cpp
	$(CXX) $(CXXFLAGS) -c $? -o $@

build/exception_protector.o: protectors/exception_protector.cpp
	$(CXX) $(CXXFLAGS) -c $? -o $@

build/failure_exception.o: failure_exception.cpp
	$(CXX) $(CXXFLAGS) -c $? -o $@

build/fixture.o: fixture.cpp
	$(CXX) $(CXXFLAGS) -c $? -o $@

build/main.o: main.cpp
	$(CXX) $(CXXFLAGS) -c $? -o $@

build/qt4_output_handler.o: output_handlers/qt4_output_handler.cpp
	$(CXX) $(CXXFLAGS) -c $? -o $@

build/qt4_output_handler.moc.o: qt4_output_handler.moc.cpp
	$(CXX) $(CXXFLAGS) -c $? -o $@

qt4_output_handler.moc.cpp: output_handlers/qt4_output_handler.h
	moc-qt4 $? > $@

build/gtk_output_handler.o: output_handlers/gtk_output_handler.cpp
	$(CXX) $(CXXFLAGS) -c $? -o $@

build/output_handler.o: output_handler.cpp
	$(CXX) $(CXXFLAGS) -c $? -o $@

build/protector.o: protector.cpp
	$(CXX) $(CXXFLAGS) -c $? -o $@

build/sample_suite.o: sample_suite.cpp
	$(CXX) $(CXXFLAGS) -c $? -o $@

build/self_tests.o: self_tests.cpp
	$(CXX) $(CXXFLAGS) -c $? -o $@

build/suite.o: suite.cpp
	$(CXX) $(CXXFLAGS) -c $? -o $@

build/test.o: test.cpp
	$(CXX) $(CXXFLAGS) -c $? -o $@

build/unix_protector.o: protectors/unix_protector.cpp
	$(CXX) $(CXXFLAGS) -c $? -o $@

tests: $(OBJECTS)
	$(CXX) $(LFLAGS) $(OBJECTS) -o $@

builddir:
	@mkdir -p build

clean:
	$(RM) $(OBJECTS)
